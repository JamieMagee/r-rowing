{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "command": "host start",
      "problemMatcher": "$func-watch",
      "isBackground": true,
      "dependsOn": "yarn build"
    },
    {
      "type": "shell",
      "label": "yarn build",
      "command": "yarn run build",
      "dependsOn": ["func: extensions install", "yarn install"],
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell",
      "label": "yarn install",
      "command": "yarn install"
    },
    {
      "type": "func",
      "command": "extensions install",
      "problemMatcher": "$func-watch"
    },
    {
      "type": "shell",
      "label": "yarn prune",
      "command": "yarn prune --production",
      "dependsOn": "yarn build",
      "problemMatcher": []
    }
  ]
}
